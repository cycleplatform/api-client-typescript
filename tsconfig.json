{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2023",
            "DOM"
        ],
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src", "tests"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}